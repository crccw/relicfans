<p id="notice"><%= notice %></p>

<h1>Listing Museums</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Home url</th>
      <th>Exhibit url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @museums.each do |museum| %>
      <tr>
        <td><%= museum.name %></td>
        <td><%= museum.home_url %></td>
        <td><%= museum.exhibit_url %></td>
        <td><%= link_to 'Show', museum %></td>
        <td><%= link_to 'Edit', edit_museum_path(museum) %></td>
        <td><%= link_to 'Destroy', museum, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

